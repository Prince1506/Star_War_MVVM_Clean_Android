<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/translucentBackground">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginStart="@dimen/activity_horizontal_margin"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/peopleDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:orientation="vertical"
            android:paddingTop="25dp"
            android:paddingBottom="25dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/textView"
                style="@style/PeopleDetailsTitleHeading"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/people_details_summary" />

            <View
                android:id="@+id/view"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView"
                style="@style/v_color_white_heading" />

            <TextView
                android:id="@+id/textView2"
                style="@style/PeopleDetailsTitle"
                android:text="@string/people_details_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view" />

            <TextView
                android:id="@+id/tv_peopleDetails_name"
                style="@style/PeopleDetailsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView2"
                android:text="Prince soni" />

            <TextView
                android:id="@+id/textView3"
                style="@style/PeopleDetailsTitle"
                android:text="@string/people_details_birth_year"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_peopleDetails_name" />

            <TextView
                android:id="@+id/tv_peopleDetails_birth_year"
                style="@style/PeopleDetailsText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView3"
                android:text="@string/people_details_birth_year" />

            <TextView
                android:id="@+id/textView4"
                style="@style/PeopleDetailsTitle"
                android:text="@string/people_details_height"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_peopleDetails_birth_year" />

            <TextView
                android:id="@+id/tv_peopleDetails_height"
                style="@style/PeopleDetailsText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView4"
                android:text="@string/people_details_height" />

            <TextView
                android:id="@+id/textView5"
                style="@style/PeopleDetailsTitleHeading"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_peopleDetails_height"
                android:text="@string/people_details_species" />

            <View
                android:id="@+id/view2"
                style="@style/v_color_white_heading"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView5" />


            <TextView
                android:id="@+id/textView6"
                style="@style/PeopleDetailsTitle"
                android:text="@string/people_details_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view2" />

            <TextView
                android:id="@+id/tv_peopleDetails_speciesName"
                style="@style/PeopleDetailsText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView6"
                android:text="@string/people_details_name" />

            <TextView
                android:id="@+id/textView7"
                style="@style/PeopleDetailsTitle"
                android:text="@string/people_details_language"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_peopleDetails_speciesName" />

            <TextView
                android:id="@+id/tv_peopleDetails_language"
                style="@style/PeopleDetailsText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView7"
                android:text="@string/people_details_language" />

            <TextView
                android:id="@+id/textView8"
                style="@style/PeopleDetailsTitle"
                android:text="@string/people_details_homeworld"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_peopleDetails_language" />

            <TextView
                android:id="@+id/tv_peopleDetails_homeworld"
                style="@style/PeopleDetailsText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView8"
                android:text="@string/people_details_homeworld" />

            <TextView
                android:id="@+id/textView9"
                style="@style/PeopleDetailsTitle"
                android:text="@string/people_details_population"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_peopleDetails_homeworld" />

            <TextView
                android:id="@+id/tv_peopleDetails_population"
                style="@style/PeopleDetailsText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView9"
                android:text="@string/people_details_population" />

            <TextView
                android:id="@+id/textView10"
                style="@style/PeopleDetailsTitle"
                android:text="@string/people_details_films"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_peopleDetails_population" />

            <TextView
                android:id="@+id/tv_peopleDetails_films"
                style="@style/PeopleDetailsText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView10"
                android:text="@string/people_details_films" />

            <TextView
                android:id="@+id/textView11"
                style="@style/PeopleDetailsTitle"
                android:text="@string/people_details_opening_crawl"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_peopleDetails_films" />

            <TextView
                android:id="@+id/tv_peopleDetails_opening_crawl"
                style="@style/PeopleDetailsText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView11"
                android:text="@string/people_details_opening_crawl" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
